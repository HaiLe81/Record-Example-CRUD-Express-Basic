extends ../layout/common

block cdn-bootstrap

    h1 Login

    if errors
        each error in errors
            .alert.alert-danger= error

    form(method="POST")
        .form-group
            label(for="email") User name
            input#username.form-control(name="username" type="text",placeholder="User name" , value= values ? values.username : "")
        .form-group
            label(for="password") Password
            input#password.form-control(name="password" type="password",placeholder="Password" , value= values ? values.password : "")

        button.btn.btn-primary Login