extends ../layout/common

block cdn-bootstrap
    h1 
        span Team FreeLancer Huflit K22
        a.btn.btn-primary(href="/users/create", class="ml-2") New

    .d-flex.align-items-center
        form.ml-auto(action="/users/search", method="GET", class="d-flex")
            input(type="text", name="q", class="form-control")
            button(class="btn btn-primary ml-2") Search

    table.table
        tr
            th Name
            th Phone
            th Age
            td
        each person in FreeLaHuflit
            tr
                td= person.name
                td= person.phone
                td= person.age
                td
                    a.btn-light(href="/users/" + person.id) View